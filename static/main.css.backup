    font-size: 0.8rem;
    font-weight: 600;
    background: var(--faint-bg-color);
    border: 2px solid var(--border-color);
    border-radius: 0.375rem;
    color: var(--color);
    cursor: pointer;
    transition: all 0.2s ease;
    text-align: center;
}

.expiry-btn:hover {
    border-color: var(--link-color);
    background: var(--light-bg-color);
}

.expiry-btn.selected {
    background: var(--link-color);
    border-color: var(--link-color);
    color: var(--bg-color);
}

.expiry-input {
    font-size: 0.85rem;
}

.expiry-display {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.75rem;
    background: rgba(91, 78, 150, 0.1);
    border: 1px solid var(--link-color);
    border-radius: 0.375rem;
    font-size: 0.85rem;
}

.clear-expiry {
    background: none;
    border: none;
    color: var(--faint-color);
    cursor: pointer;
    padding: 0;
    font-size: 1.2rem;
    line-height: 1;
    transition: color 0.2s ease;
}

.clear-expiry:hover {
    color: var(--error-color);
}

/* One-time Toggle */
.toggle-field {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    cursor: pointer;
    user-select: none;
}

.toggle-checkbox {
    display: none;
}

.toggle-switch-mini {
    position: relative;
    width: 44px;
    height: 24px;
    background: var(--faint-bg-color);
    border-radius: 12px;
    border: 2px solid var(--border-color);
    transition: all 0.2s ease;
}

.toggle-slider-mini {
    position: absolute;
    top: 2px;
    left: 2px;
    width: 16px;
    height: 16px;
    background: var(--faint-color);
    border-radius: 50%;
    transition: all 0.2s ease;
}

.toggle-checkbox:checked + .toggle-switch-mini {
    background: var(--link-color);
    border-color: var(--link-color);
}

.toggle-checkbox:checked + .toggle-switch-mini .toggle-slider-mini {
    transform: translateX(20px);
    background: var(--bg-color);
}

.toggle-text {
    font-weight: 500;
    color: var(--color);
}

/* Action Buttons */
.action-buttons {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-top: 1rem;
}

.action-btn {
