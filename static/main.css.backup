}

.action-btn.secondary {
    background: var(--faint-bg-color);
    color: var(--color);
    border: 2px solid var(--border-color);
}

.action-btn.secondary:hover {
    border-color: var(--link-color);
    background: var(--light-bg-color);
}

/* Hidden Elements */
.hidden-file-input {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
}

/* File List */
.file-list {
    background: var(--faint-bg-color);
    border: 1px solid var(--border-color);
    border-radius: 0.5rem;
    padding: 1rem;
    margin-top: 1rem;
}

.file-list-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.75rem;
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--color);
}

.clear-all {
    background: none;
    border: none;
    color: var(--error-color);
    cursor: pointer;
    font-size: 0.8rem;
    text-decoration: underline;
}

.clear-all:hover {
    color: var(--color);
}

/* File item styling - Made Smaller */
.file-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.4rem;
    background: var(--bg-color);
    border: 1px solid var(--border-color);
