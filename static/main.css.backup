/* Preview Content Styling */
#preview-container.document-content {
    padding: 1rem;
    overflow-y: auto;
    height: 100%;
}

#preview-container h1,
#preview-container h2,
#preview-container h3,
#preview-container h4,
#preview-container h5,
#preview-container h6 {
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    line-height: 1.3;
    color: var(--color);
}

#preview-container h1 {
    font-size: 2rem;
    border-bottom: 1px solid var(--border-color);
    padding-bottom: 0.5rem;
}

#preview-container h2 {
    font-size: 1.5rem;
}

#preview-container h3 {
    font-size: 1.25rem;
}

#preview-container p {
    margin-bottom: 1rem;
    line-height: 1.6;
}

#preview-container pre {
    background: var(--code-bg-color);
    border: 1px solid var(--border-color);
    border-radius: 4px;
    padding: 1rem;
    overflow-x: auto;
    margin: 1rem 0;
}

#preview-container code {
    background: var(--code-bg-color);
    padding: 0.2rem 0.4rem;
    border-radius: 3px;
    font-size: 0.9em;
    font-family: var(--monospace);
}

#preview-container pre code {
    background: none;
    padding: 0;
}

#preview-container blockquote {
    margin: 1rem 0;
    padding: 0 1rem;
    border-left: 4px solid var(--link-color);
    color: var(--faint-color);
    font-style: italic;
}

#preview-container ul,
#preview-container ol {
    margin: 1rem 0;
    padding-left: 2rem;
}

#preview-container li {
    margin: 0.5rem 0;
}

#preview-container table {
    width: 100%;
    border-collapse: collapse;
    margin: 1rem 0;
}

#preview-container th,
#preview-container td {
    border: 1px solid var(--border-color);
    padding: 0.75rem;
    text-align: left;
}

#preview-container th {
    background: var(--faint-bg-color);
    font-weight: 600;
}

/* Floating Actions */
.floating-actions {
    position: fixed;
    top: 4.5rem;
    right: 1rem;
    z-index: 1100;
}

/* Revision Panel as Sidebar */
.revision-panel {
    position: fixed;
    top: 0;
    right: 0;
    height: 100%;
    width: 300px; /* Adjust width as needed */
    background: var(--dark-bg-color);
    border-left: 1px solid var(--border-color);
    box-shadow: -4px 0 20px rgba(0, 0, 0, 0.2);
    z-index: 1200; /* Higher than other elements */
    display: flex;
    flex-direction: column;
    transform: translateX(100%); /* Start off-screen */
    transition: transform 0.3s ease-out;
}

.revision-panel.show {
    transform: translateX(0); /* Slide in */
}

.revision-panel-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.5rem;
    border-bottom: 1px solid var(--border-color);
    background: var(--bg-color);
    flex-shrink: 0;
}

.revision-panel-header h3 {
    margin: 0;
    font-size: 1.2rem;
    color: var(--color);
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.revision-panel-header svg {
    width: 20px;
    height: 20px;
}

.revision-panel .close-btn {
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    color: var(--faint-color);
    padding: 0.25rem;
    border-radius: 4px;
    transition: background-color 0.2s ease;
}

.revision-panel .close-btn:hover {
    background-color: var(--faint-bg-color);
}

.revision-list {
    flex-grow: 1;
    overflow-y: auto;
    padding: 1rem 1.5rem;
}

.revision-entry {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--border-color); /* Keep a subtle divider */
    font-size: 0.875rem; /* Smaller font size */
}

.revision-entry:last-child {
    border-bottom: none;
}

.revision-info {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
}

.revision-title {
    font-weight: 500;
    color: var(--color);
}

.revision-date {
    color: var(--faint-color);
    font-size: 0.75rem; /* Even smaller for date */
}

.revision-action {
    background: var(--link-color);
    padding: 0.25rem 0.5rem; /* Adjust padding for icon */
    border-radius: 4px;
    text-decoration: none;
    display: flex; /* Use flexbox for centering icon */
    align-items: center;
    justify-content: center;
    transition: background-color 0.2s ease;
}

.revision-action svg {
    fill: var(--bg-color); /* Set icon color to contrast with background */
    width: 14px; /* Ensure icon size */
    height: 14px;
}

.revision-action:hover {
    background: var(--link-hover-color);
}

/* Adjust main content when revision panel is open */
body.revision-panel-open .paste-main {
    margin-right: 300px; /* Same width as panel */
    transition: margin-right 0.3s ease-out;
}

/* Mobile adjustments for revision panel */
@media (max-width: 768px) {
    .revision-panel {
        width: 100%;
        height: 50%; /* Occupy half screen height on mobile */
        bottom: 0;
        top: auto;
        border-top: 1px solid var(--border-color);
        border-left: none;
        transform: translateY(100%);
        box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.2);
    }

    .revision-panel.show {
        transform: translateY(0);
    }

    body.revision-panel-open .paste-main {
        margin-right: 0; /* No margin on mobile */
        margin-bottom: 50%; /* Adjust for panel at bottom */
    }
}

.action-menu-btn {
