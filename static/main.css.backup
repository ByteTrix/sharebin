.clear-all:hover {
    background: rgba(215, 28, 28, 0.1);
}

.file-items {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

/* Error styling */
.field-error {
    font-size: 0.8rem;
    color: var(--error-color);
    margin-top: 0.25rem;
}

/* Option Fields - Made Smaller */
.option-field {
    display: flex;
    flex-direction: column;
    gap: 0.3rem;
}

.field-label {
    font-weight: 600;
    font-size: 0.75rem;
    color: var(--color);
    display: flex;
    align-items: center;
    gap: 0.3rem;
}

.field-checkbox {
    width: 14px;
    height: 14px;
    margin: 0;
    accent-color: var(--link-color);
}

.field-input {
    width: 100%;
    padding: 0.5rem 0.75rem;
    font-family: var(--sans-serif);
    font-size: 0.75rem;
    background: var(--bg-color);
    border: 2px solid var(--border-color);
    border-radius: 0.4rem;
    color: var(--color);
    transition: all 0.2s ease;
}

.field-input:focus {
    outline: none;
    border-color: var(--link-color);
    box-shadow: 0 0 0 3px rgba(91, 78, 150, 0.1);
}

.field-input::placeholder {
