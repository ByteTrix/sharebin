    color: #000000;
}

/* Light theme only: black button */
[data-theme="l"] .sidebar-btn.primary {
    background: #000000;
    color: #ffffff;
}

/* Auto theme - follows system preference */
@media (prefers-color-scheme: light) {
    body:not([data-theme="d"]):not([data-theme="l"]) .sidebar-btn.primary {
        background: #000000;
        color: #ffffff;
    }
}

/* Explicit dark theme override */
[data-theme="d"] .sidebar-btn.primary {
    background: #ffffff;
    color: #000000;
}

.sidebar-btn.primary:hover {
    background: var(--bg-color);
