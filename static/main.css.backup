.file-list-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.4rem;
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--color);
}

.clear-all {
    background: none;
    border: none;
    color: var(--error-color);
    cursor: pointer;
    font-size: 0.7rem;
    padding: 0.2rem;
    border-radius: 3px;
    transition: background-color 0.2s ease;
